<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/different_white"
    android:fillViewport="true"
    tools:context=".ServicesFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/services_constraint_layout">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:elevation="6dp"
            android:id="@+id/servicesSupportFragment"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/services_text"
            android:textColor="@color/different_black"
            android:fontFamily="@font/poppins_semi_bold"
            android:textStyle="bold"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:text="@string/services"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/services_laundry_text"
            android:layout_marginTop="20dp"
            android:layout_marginStart="23dp"
            android:gravity="center|start"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingStart="35dp"
            android:paddingEnd="8dp"
            android:text="Laundry"
            android:textColor="@color/different_black"
            android:layout_marginEnd="23dp"
            android:fontFamily="@font/poppins_regular"
            android:background="@drawable/rounded_black_textview"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/services_text"
            tools:ignore="HardcodedText" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/services_laundry_schedule"
            android:orientation="horizontal"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toBottomOf="@id/services_laundry_text"
            app:layout_constraintStart_toStartOf="@id/services_laundry_text">

            <androidx.cardview.widget.CardView
                android:layout_width="70dp"
                android:layout_height="25dp"
                app:cardCornerRadius="4dp"
                android:layout_marginTop="-4dp"
                app:cardBackgroundColor="@color/light_blue">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:backgroundTintMode="src_in"
                    android:background="@drawable/rounded_transparent_bg"
                    android:layout_gravity="center"
                    android:text="Sun"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="12sp"
                    android:textStyle="bold"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="70dp"
                android:layout_height="25dp"
                app:cardCornerRadius="4dp"
                android:layout_marginTop="-4dp"
                android:backgroundTint="#4CCB9E">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Sun"
                    android:background="@drawable/rounded_transparent_bg"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="12sp"
                    android:textStyle="bold"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="70dp"
                android:layout_height="25dp"
                app:cardCornerRadius="4dp"
                android:layout_marginTop="-4dp"
                app:cardBackgroundColor="@color/white"
                android:backgroundTint="#A6F83E54">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Sun"
                    android:background="@drawable/rounded_transparent_bg"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="12sp"
                    android:textStyle="bold"/>

            </androidx.cardview.widget.CardView>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/wifi_icon"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/services_laundry_text"
            app:layout_constraintTop_toTopOf="@id/services_laundry_text"
            app:layout_constraintBottom_toBottomOf="@id/services_laundry_text"
            android:contentDescription="@string/todo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/services_ac_text"
            android:layout_marginTop="20dp"
            android:layout_marginStart="23dp"
            android:gravity="center|start"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingStart="35dp"
            android:paddingEnd="8dp"
            android:text="A-C Timing"
            android:textColor="@color/different_black"
            android:layout_marginEnd="23dp"
            android:fontFamily="@font/poppins_regular"
            android:background="@drawable/rounded_black_textview"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/services_laundry_schedule"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/services_ac_schedule"
            android:orientation="horizontal"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toBottomOf="@id/services_ac_text"
            app:layout_constraintStart_toStartOf="@id/services_ac_text">

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="25dp"
                app:cardCornerRadius="4dp"
                android:layout_marginTop="-4dp"
                app:cardBackgroundColor="@color/light_blue">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:backgroundTintMode="src_in"
                    android:background="@drawable/rounded_transparent_bg"
                    android:layout_gravity="center"
                    android:text="Sun"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="12sp"
                    android:textStyle="bold"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="25dp"
                app:cardCornerRadius="4dp"
                android:layout_marginTop="-4dp"
                android:backgroundTint="#4CCB9E">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Sun"
                    android:background="@drawable/rounded_transparent_bg"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="12sp"
                    android:textStyle="bold"/>

            </androidx.cardview.widget.CardView>



        </androidx.appcompat.widget.LinearLayoutCompat>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ac_icon"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/services_ac_text"
            app:layout_constraintTop_toTopOf="@id/services_ac_text"
            app:layout_constraintBottom_toBottomOf="@id/services_ac_text"
            android:contentDescription="@string/todo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/services_housekeeping_text"
            android:layout_marginTop="20dp"
            android:layout_marginStart="23dp"
            android:gravity="center|start"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingStart="35dp"
            android:paddingEnd="8dp"
            android:text="Housekeeping"
            android:textColor="@color/different_black"
            android:layout_marginEnd="23dp"
            android:fontFamily="@font/poppins_regular"
            android:background="@drawable/rounded_black_textview"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/services_ac_schedule"
            tools:ignore="HardcodedText" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/services_housekeeping_schedule"
            android:orientation="horizontal"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toBottomOf="@id/services_housekeeping_text"
            app:layout_constraintStart_toStartOf="@id/services_housekeeping_text">

            <androidx.cardview.widget.CardView
                android:layout_width="70dp"
                android:layout_height="25dp"
                app:cardCornerRadius="4dp"
                android:layout_marginTop="-4dp"
                app:cardBackgroundColor="@color/light_blue">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:backgroundTintMode="src_in"
                    android:background="@drawable/rounded_transparent_bg"
                    android:layout_gravity="center"
                    android:text="Sun"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="12sp"
                    android:textStyle="bold"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="70dp"
                android:layout_height="25dp"
                app:cardCornerRadius="4dp"
                android:layout_marginTop="-4dp"
                android:backgroundTint="#4CCB9E">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Sun"
                    android:background="@drawable/rounded_transparent_bg"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="12sp"
                    android:textStyle="bold"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="70dp"
                android:layout_height="25dp"
                app:cardCornerRadius="4dp"
                android:layout_marginTop="-4dp"
                app:cardBackgroundColor="@color/white"
                android:backgroundTint="#A6F83E54">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Sun"
                    android:background="@drawable/rounded_transparent_bg"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="12sp"
                    android:textStyle="bold"/>

            </androidx.cardview.widget.CardView>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/housekeeping_icon"
            android:layout_marginStart="3dp"
            app:layout_constraintStart_toStartOf="@+id/services_housekeeping_text"
            app:layout_constraintTop_toTopOf="@id/services_housekeeping_text"
            app:layout_constraintBottom_toBottomOf="@id/services_housekeeping_text"
            android:contentDescription="@string/todo" />


        <androidx.cardview.widget.CardView
            android:id="@+id/services_instant_support_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="5dp"
            android:backgroundTint="@color/nalanda_blue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/services_housekeeping_schedule"
            tools:ignore="HardcodedText" >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/white"
                android:paddingTop="5dp"
                android:textSize="14sp"
                android:paddingBottom="5dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="Instant Support"/>

        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>



</ScrollView>