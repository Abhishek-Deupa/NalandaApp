<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/different_white"
    android:fillViewport="true"
    tools:context=".ReferFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/refer_color_icon"
            android:layout_marginStart="15dp"
            android:layout_marginTop="35dp"
            android:src="@drawable/refer_color_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_refer_text"
            android:textColor="@color/different_black"
            android:fontFamily="@font/poppins_semi_bold"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:text="@string/referandearn"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/refer_color_icon"
            app:layout_constraintTop_toTopOf="@id/refer_color_icon"
            app:layout_constraintBottom_toBottomOf="@id/refer_color_icon"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:id="@+id/refer_field_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/refer_color_icon">

            <EditText
                android:id="@+id/refer_name_edtTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:autofillHints="name"
                android:textColor="@color/black"
                android:background="@drawable/rounded_black_textview"
                android:fontFamily="@font/poppins_regular"
                android:hint="Friends Name"
                android:inputType="textPersonName"
                android:paddingStart="16dp"
                android:paddingTop="4dp"
                android:paddingEnd="16dp"
                android:paddingBottom="4dp"
                android:textColorHint="@color/text_grey"
                android:textSize="14sp"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/refer_college_name_edtTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:autofillHints="name"
                android:textColor="@color/black"
                android:background="@drawable/rounded_black_textview"
                android:fontFamily="@font/poppins_regular"
                android:hint="College/University"
                android:inputType="textPersonName"
                android:paddingStart="16dp"
                android:paddingTop="4dp"
                android:paddingEnd="16dp"
                android:paddingBottom="4dp"
                android:textColorHint="@color/text_grey"
                android:textSize="14sp"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/refer_phone_edtTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:autofillHints="phone"
                android:textColor="@color/black"
                android:background="@drawable/rounded_black_textview"
                android:fontFamily="@font/poppins_regular"
                android:hint="Contact Number"
                android:inputType="phone"
                android:paddingStart="16dp"
                android:paddingTop="4dp"
                android:paddingEnd="16dp"
                android:paddingBottom="4dp"
                android:textColorHint="@color/text_grey"
                android:textSize="14sp"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/refer_submit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="5dp"
            android:backgroundTint="@color/nalanda_blue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/refer_field_ll"
            tools:ignore="HardcodedText" >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/white"
            android:paddingTop="5dp"
            android:textSize="14sp"
            android:paddingBottom="5dp"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"
            android:text="Submit"/>

        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/refer_submit_btn"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/refer_link"
                tools:ignore="ContentDescription" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/poppins_regular"
                android:textSize="14sp"
                android:gravity="center|start"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColor="@color/black"
                android:text="Starting at 1,500 / Friend"/>


        </LinearLayout>





    </androidx.constraintlayout.widget.ConstraintLayout>



</ScrollView>