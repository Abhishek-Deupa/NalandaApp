<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/different_white"
    android:fillViewport="true"
    tools:context=".SelectHostel">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="25dp"
            android:layout_height="21dp"
            android:id="@+id/select_hostel_back_btn"
            android:layout_marginTop="25dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/back_btn"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_hostel"
            android:textAllCaps="false"
            android:layout_marginStart="13dp"
            android:fontFamily="@font/poppins_semi_bold"
            android:textSize="22sp"
            android:layout_marginTop="9dp"
            android:backgroundTint="@color/different_black"
            android:textColor="@color/different_black"
            app:layout_constraintTop_toTopOf="@id/select_hostel_back_btn"
            app:layout_constraintBottom_toBottomOf="@id/select_hostel_back_btn"
            app:layout_constraintStart_toEndOf="@id/select_hostel_back_btn"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:id="@+id/select_chanakya_hostel"
            android:src="@drawable/chanakya_hostel"
            android:layout_marginTop="45dp"
            android:padding="3dp"
            android:scaleType="fitXY"
            app:layout_constraintTop_toBottomOf="@id/select_hostel_back_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.cardview.widget.CardView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/chanakaya_info"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/different_white"
            app:cardCornerRadius="15dp"
            app:layout_constraintTop_toTopOf="@id/select_chanakya_hostel"
            app:layout_constraintEnd_toEndOf="@id/select_chanakya_hostel">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="i"
                android:paddingTop="2dp"
                android:textSize="18sp"
                android:paddingStart="13dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="@color/different_black"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/college_info"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/different_white"
            app:cardCornerRadius="15dp"
            app:layout_constraintTop_toTopOf="@id/select_college_hostel"
            app:layout_constraintEnd_toEndOf="@id/select_college_hostel">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="i"
                android:paddingTop="2dp"
                android:textSize="18sp"
                android:paddingStart="13dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="@color/different_black"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:id="@+id/drona_info"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/different_white"
            app:cardCornerRadius="15dp"
            app:layout_constraintTop_toTopOf="@id/select_drona_hostel"
            app:layout_constraintEnd_toEndOf="@id/select_drona_hostel">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="i"
                android:paddingTop="2dp"
                android:textSize="18sp"
                android:paddingStart="13dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="@color/different_black"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:id="@+id/select_chanakya_hostel_text"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:text="Chanakaya"
            android:fontFamily="@font/poppins_semi_bold"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="@id/select_chanakya_hostel"
            app:layout_constraintBottom_toBottomOf="@id/select_chanakya_hostel"
            app:layout_constraintStart_toStartOf="@id/select_chanakya_hostel"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/location_icon"
            android:id="@+id/select_chanakya_hostel_icon"
            app:layout_constraintStart_toStartOf="@id/select_chanakya_hostel_text"
            app:layout_constraintTop_toBottomOf="@id/select_chanakya_hostel_text"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:fontFamily="@font/poppins_regular"
            android:text="Near Interglobe college, Greater Noida"
            android:layout_marginStart="7dp"
            app:layout_constraintStart_toEndOf="@id/select_chanakya_hostel_icon"
            app:layout_constraintTop_toTopOf="@id/select_chanakya_hostel_icon"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:id="@+id/select_drona_hostel"
            android:src="@drawable/drona_hostel"
            android:layout_marginTop="20dp"
            android:padding="3dp"
            android:backgroundTint="#00f5d4"
            android:scaleType="fitXY"
            app:layout_constraintTop_toBottomOf="@id/select_chanakya_hostel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:id="@+id/select_drona_hostel_text"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:text="Drona"
            android:fontFamily="@font/poppins_semi_bold"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="@id/select_drona_hostel"
            app:layout_constraintBottom_toBottomOf="@id/select_drona_hostel"
            app:layout_constraintStart_toStartOf="@id/select_drona_hostel"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/location_icon"
            android:id="@+id/select_drona_hostel_icon"
            app:layout_constraintStart_toStartOf="@id/select_drona_hostel_text"
            app:layout_constraintTop_toBottomOf="@id/select_drona_hostel_text"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:fontFamily="@font/poppins_regular"
            android:text="Near Interglobe college, Greater Noida"
            android:layout_marginStart="7dp"
            app:layout_constraintStart_toEndOf="@id/select_drona_hostel_icon"
            app:layout_constraintTop_toTopOf="@id/select_drona_hostel_icon"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:id="@+id/select_college_hostel"
            android:src="@drawable/college_hostel"
            android:layout_marginTop="20dp"
            android:padding="3dp"
            android:backgroundTint="#00f5d4"
            android:scaleType="fitXY"
            app:layout_constraintTop_toBottomOf="@id/select_drona_hostel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:id="@+id/select_college_hostel_text"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:text="College"
            android:fontFamily="@font/poppins_semi_bold"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="@id/select_college_hostel"
            app:layout_constraintBottom_toBottomOf="@id/select_college_hostel"
            app:layout_constraintStart_toStartOf="@id/select_college_hostel"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/location_icon"
            android:id="@+id/select_college_hostel_icon"
            app:layout_constraintStart_toStartOf="@id/select_college_hostel_text"
            app:layout_constraintTop_toBottomOf="@id/select_college_hostel_text"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:fontFamily="@font/poppins_regular"
            android:text="Near Interglobe college, Greater Noida"
            android:layout_marginStart="7dp"
            app:layout_constraintStart_toEndOf="@id/select_college_hostel_icon"
            app:layout_constraintTop_toTopOf="@id/select_college_hostel_icon"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/select_bed_ll"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@id/select_hostel_null_text"
            app:layout_constraintTop_toBottomOf="@id/select_college_hostel">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_semi_bold"
                android:textAllCaps="false"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingStart="30dp"
                android:backgroundTint="#2D6BC8"
                android:paddingEnd="30dp"
                android:background="@drawable/button_style_curve"
                android:textColor="@color/white"
                android:text="Seater"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/select_1_seater"
                android:textSize="16sp"
                android:text="1"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/poppins_semi_bold"
                android:layout_gravity="center"
                android:textColor="@color/different_black"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/select_2_seater"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_semi_bold"
                android:text="2"
                android:layout_gravity="center"
                android:textColor="@color/different_black"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/select_3_seater"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_semi_bold"
                android:text="3"
                android:layout_gravity="center"
                android:textColor="@color/different_black"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/select_4_seater"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_semi_bold"
                android:text="4"
                android:layout_gravity="center"
                android:textColor="@color/different_black"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="15dp"
            android:id="@+id/select_hostel_null_text"
            app:layout_constraintTop_toBottomOf="@id/select_bed_ll"
            app:layout_constraintBottom_toTopOf="@id/select_hostel_pay_btn"/>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="25dp"
            android:id="@+id/select_hostel_pay_btn"
            android:layout_marginBottom="15dp"
            android:backgroundTint="@color/different_black"
            app:layout_constraintTop_toBottomOf="@id/select_hostel_null_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_semi_bold"
                android:text="Proceed to pay"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"/>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>